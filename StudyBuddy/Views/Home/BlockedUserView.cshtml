@{
    Layout = "_BlockedLayout";
    ViewBag.Title = "Blocked User";
}

<div class="container d-flex flex-column justify-content-center align-items-center" style="height: 60vh;">
    <div class="text-center">
        <h1 class="display-4">You have been blocked.</h1>
        <p class="lead">
            @if (ViewData["BlockReason"] != null)
            {
                <span>Your account was suspended for: <strong>@ViewData["BlockReason"]</strong></span>
            }
        </p>
        <p class="mt-3 mb-0">
            @if(ViewData["BlockTime"] != null){
                <span>Block Time:<strong>@ViewData["BlockTime"]</strong></span>
            }
        </p>
        <p class="mt-3 mb-0">Please contact the administrator for more details.</p>
    </div>
</div>
